<header>
  <nav class="navbar navbar-inverse navbar-head">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "Gambatte", root_path, class: "navbar-brand" %>
      </div>
      <form class="navbar-form navbar-left">
        <%= form_tag "/", method: :get do %>
          <div class="input-group">
            <%= text_field_tag "query", params[:query], class: "form-control", placeholder: "Enter to search", id: "post_search", autocomplete: "off" %>
            <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
          </div>
        <% end %>
        <!-- <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" name="search">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div> -->
      </form>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to new_post_path do %>
              <span class="glyphicon glyphicon-edit"></span>
              Create post
            <% end %>
          </li>
          <li>
            <%= link_to profile_path(current_user.id), class: "avatar-header" do %>
              <span><%= image_tag current_user.image, class: "img-circle", width: "40", height: "40"%></span>
              <%= current_user.name %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-off"></span>
              Sign out
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-user"></span>
              Sign up
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-user"></span>
              Log in
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
<script>
  $("#post_search").autocomplete({
    source: "/posts/autocomplete.json",
    minLength: 2
  });
</script>