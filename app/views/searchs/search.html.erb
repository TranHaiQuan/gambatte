<h1>Search form</h1>
<%= form_for search_path, method: :get do %>
  <%= f.label "Search for" %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag "Go", name: nil %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <h3>
          <%= link_to post.title, controller: "posts", action: "show", id: post._id%>
        </h3>
      </li>
    <% end %>
  </ul>
<% end %>
