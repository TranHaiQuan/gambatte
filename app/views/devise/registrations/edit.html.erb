<% provide :action_text, "save change" %>
<%= form_for resource, as: resource_name,
  url: registration_path(resource_name) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-2">
      <%= image_tag current_user.image, class: "img-circle", width: "150", height: "150" %>
      <br>
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "form-control" %>
    </div>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-2">
          <p><b>Email: </b></p>
          <p><b>Name: </b></p>
          <p><b>Sex: </b></p>
        </div>
        <div class="col-md-5">
          <%= f.text_field :email, class: "form-control", readonly: true %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.select :sex, User.sexes.keys, {},class: "form-control" %>
        </div>
        <div class="col-md-5"></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-10">
      <%= f.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
<hr>
<script type="text/javascript">
  $('#user_image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
