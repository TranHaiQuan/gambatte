<h3><b>Newest Post</b></h3>
<hr style="color: black;">
<div class="row">
  <% if @posts.size == 0 %>
    <h4 class="text-center"><i>No post</i></h4>
  <% else %>
    <div>
      <%# if @search.present? && @posts.suggestions.present? %>
        <%#= @posts.suggestions %>
        <%#= console %>
      <%# end %>
    </div>
    <h3><%= @posts.size %> posts</h3>
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col-md-1">
          <div class="avatar">
            <%= image_tag post.user.image, class: "img-circle", width: "50", height: "50" %>
          </div>
        </div>
        <div class="col-md-11">
          <div class="header-post">
            <%= link_to post.user.name, profile_path(post.user.id) %>
            <%= time_ago_in_words post.created_at %> ago
          </div>
          <div class="post-title">
            <h3 style="margin-top: 10px;"><%= link_to post.title, post_path(post) %></h3>
          </div>
          <div class="row">
            <div class="col-md-1">
              <span class="glyphicon glyphicon-heart"></span> <span id="comment-size"><%= post.likes.size %></span>
            </div>

            <div class="col-md-1">
              <span class="glyphicon glyphicon-comment"></span> <span id="comment-size"><%= post.comments.size %></span>
            </div>
          </div>
        </div>
      </div>
      <hr>
    <% end %>
    <%= paginate @posts %>
  <% end %>
</div>
